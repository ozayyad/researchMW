<%= form_for @user do |form| %>

  <% if @user.errors.any? %>
    <div class="h3">
      <%= pluralize(@user.errors.count, "error") %> prevented your account from being created:
    </div>
    <ul>
      <% @user.errors.full_messages.each do |error_message| %>
        <li class="h3"><%= error_message %></li>
      <% end %>
    </ul>
  <% end %>

  <div>
    <%= form.email_field :email, placeholder: "Email", class: "form_field" %>
  </div>
  <div>
    <%= form.password_field :password, placeholder: "Password", class: "form_field" %>
  </div>
  <div>
    <%= form.submit "Sign up", class: "btn h1" %>
  </div>
<% end %>
